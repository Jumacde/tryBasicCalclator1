<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center_vertical"
    android:background="@color/MaastrichtBlue"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/BrightGray"
            android:layout_gravity="fill_horizontal"
            android:gravity="left|bottom"
            android:text="0"
            android:textColor="@color/DarkSlateGray"
            android:textSize="30dp"
            />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/WintergreenDream"
            android:columnCount="4"
            android:padding="10dp"
            >
            <Button
                android:id="@+id/b7"
                android:onClick="press7"
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textSize="30dp"
                android:textColor="@color/DarkSlateGray"
                android:backgroundTint="@color/X11DarkGray"
                />
            <Button
                android:id="@+id/b8"
                android:onClick="press7"
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textSize="30dp"
                android:textColor="@color/DarkSlateGray"
                android:backgroundTint="@color/X11DarkGray"
                />
            <Button
                android:id="@+id/b9"
                android:onClick="press9"
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textSize="30dp"
                android:textColor="@color/DarkSlateGray"
                android:backgroundTint="@color/X11DarkGray"
                />
            <Button
                android:id="@+id/div"
                android:onClick="pressDiv"
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textSize="30dp"
                android:textColor="@color/Champagne"
                android:backgroundTint="@color/PoliceBlue"
                />


        </GridLayout>
    </LinearLayout>
</LinearLayout>